-- pico-8 bar prototype
-- a simple system for a bar that fills with a button press and decreases over time.

-- initialize variables
bar_value = 0      -- the current value of the bar (0 to 100)
bar_max = 100      -- the maximum value of the bar
bar_width = 80    -- the width of the bar in pixels
bar_height = 8     -- the height of the bar in pixels
bar_x = 10         -- x position of the bar
bar_y = 100        -- y position of the bar
fill_speed = 25     -- how much the bar fills per button press
decrease_speed = 0.2 -- how much the bar decreases per frame

function _init()
  -- set up initial game state
  -- this function is called once at the start of the program
end

function _update()
  -- this function is called 30 times a second
  
  -- decrease the bar's value over time
  bar_value = bar_value - decrease_speed
  
  -- clamp the bar's value to be between 0 and 100
  if bar_value < 0 then
    bar_value = 0
  end
  
  -- check for button press (pico-8 button 0, typically 'z' or 'c')
  if btnp(4) or btnp(5) then
    -- increase the bar's value
    bar_value = bar_value + fill_speed
    
    -- clamp the bar's value so it doesn't go over 100
    if bar_value > bar_max then
      bar_value = bar_max
    end
  end
end

function _draw()
  -- this function is called 30 times a second to draw the screen
  cls() -- clear the screen
  
  -- calculate the filled portion of the bar
  local filled_width = (bar_value / bar_max) * bar_width
  
  -- draw the empty bar outline
  rectfill(bar_x - 1, bar_y - 1, bar_x + bar_width + 1, bar_y + bar_height + 1, 0) -- draw a black border
  rectfill(bar_x, bar_y, bar_x + bar_width, bar_y + bar_height, 1) -- draw the empty white background
  
  -- draw the filled portion of the bar
  local fill_color = 8 -- default fill color (gray)
  local text_multiplier = "x100" -- default text
  
  -- check if the bar is in the "green zone"
  if bar_value >= 70 and bar_value < 100 then
    fill_color = 11 -- green color
    text_multiplier = "x200"
  --elseif bar_value >= 75 then
  --  fill_color = 11 -- green color
--    text_multiplier = "x300" -- or some other value
  end
  
  rectfill(bar_x, bar_y, bar_x + filled_width, bar_y + bar_height, fill_color)
  
  -- draw the "green zone" indicators
  -- draw markers at 50% and 75%
 -- local green_zone_start = bar_x + (bar_width * 0.5)
  local green_zone_end = bar_x + (bar_width * 0.7)
  
 -- rect(green_zone_start, bar_y - 1, green_zone_start, bar_y + bar_height + 1, 10) -- blue vertical line
  rect(green_zone_end, bar_y - 1, green_zone_end, bar_y + bar_height + 1, 10) -- blue vertical line
  
  -- display the text on the side
  print(text_multiplier .. "%", bar_x + bar_width + 8, bar_y, 7) -- white text

		--instructions
		print("press x or z on keyboard", 15, 60,6)
		print("this is a sauna", 35, 30,5)


end


